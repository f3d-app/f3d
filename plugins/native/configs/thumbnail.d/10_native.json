[
  {
    "match-type": "glob",
    "match": "*.{dcm,nrrd,mhd,mha,vti}",
    "options": {
      "scalar-coloring": true,
      "volume": true
    }
  },
  {
    "match-type": "glob",
    "match": "*.{3ds,stl}",
    "options": {
      "up": "+Z",
      "camera-direction": "-1,1,-0.5"
    }
  },
  {
    "match-type": "glob",
    "match": "*.{stl,gml,pts,vtp,vtu,vtr,vti,vts,vtm}",
    "options": {
      "scalar-coloring": true
    }
  },
  {
    "match-type": "glob",
    "match": "*.ply",
    "options": {
      "scalar-coloring": true,
      "coloring-component": "-2",
      "blending": "ddp"
    }
  },
  {
    "match-type": "glob",
    "match": "*.{splat,spz}",
    "options": {
      "point-sprites": "gaussian",
      "point-sprites-absolute-size": true,
      "point-sprites-size": 1,
      "scalar-coloring": true,
      "coloring-array": "color",
      "coloring-component": "-2",
      "tone-mapping": false,
      "grid": false,
      "anti-aliasing": "none",
      "blending": "sort"
    }
  },
  {
    "match-type": "glob",
    "match": "*.splat",
    "options": {
      "up": "-Y",
      "camera-position": "0,1,-5.2",
      "camera-focal-point": "0,1,0"
    }
  },
  {
    "match-type": "glob",
    "match": "*.spz",
    "options": {
      "camera-position": "0,1,4",
      "camera-focal-point": "0,0,0"
    }
  },
  {
    "match-type": "glob",
    "match": "*.{tga,hdr,webp}",
    "options": {
      "scalar-coloring": true,
      "coloring-component": "-2",
      "camera-direction": "0,0,-1",
      "camera-orthographic": true
    }
  },
  {
    "match-type": "glob",
    "match": "*.mdl",
    "options": {
      "up": "+Z"
    }
  }
]
