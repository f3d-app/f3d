<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <mime-type type="application/vnd.nrrd">
    <comment>"nearly raw raster data" file</comment>
    <glob pattern="*.nrrd"/>
    <glob pattern="*.nhrd"/>
  </mime-type>
  <mime-type type="application/vnd.mhd">
    <comment>MetaHeader MetaIO file</comment>
    <glob pattern="*.mhd"/>
    <glob pattern="*.mha"/>
  </mime-type>
  <mime-type type="image/vnd.radiance">
    <comment>HDR Radiance Image file</comment>
    <glob pattern="*.hdr"/>
    <glob pattern="*.pic"/>
  </mime-type>
  <mime-type type="image/x-exr">
    <comment>OpenEXR Image file</comment>
    <glob pattern="*.exr"/>
  </mime-type>
</mime-info>
